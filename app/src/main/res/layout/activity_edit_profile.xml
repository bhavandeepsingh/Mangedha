<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mangedha.knit.activities.MyProfile">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAllCaps="true"

                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_textsize"
                android:textStyle="bold" />

            <com.mangedha.knit.layouts.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="@dimen/dim_textfields_top_margin"
                android:id="@+id/profile_name_layout">

                <EditText
                    style="@style/attrs_register_field"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_name"
                    />
            </com.mangedha.knit.layouts.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_border_height"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="14dp"
                android:background="@color/clr_border" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_textsize"
                    android:textStyle="bold" />

                <com.mangedha.knit.layouts.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_email_layout">

                    <EditText
                        style="@style/attrs_register_field"
                        android:layout_marginTop="@dimen/dim_textfields_top_margin"
                        android:id="@+id/profile_email"/>

                </com.mangedha.knit.layouts.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_border_height"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/clr_border" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_textsize"
                    android:textStyle="bold" />

                <com.mangedha.knit.layouts.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_mobile_layout">

                    <EditText
                        style="@style/attrs_register_field"
                        android:id="@+id/profile_mobile"
                        />

                </com.mangedha.knit.layouts.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_border_height"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/clr_border" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_textsize"
                    android:textStyle="bold" />

                <com.mangedha.knit.layouts.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_city_layout">

                    <EditText
                        style="@style/attrs_register_field"
                        android:id="@+id/profile_city"
                         />

                </com.mangedha.knit.layouts.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_border_height"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/clr_border" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zipcode"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_textsize"
                    android:textStyle="bold" />

                <com.mangedha.knit.layouts.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_zip_code_layout">

                    <EditText
                        style="@style/attrs_register_field"
                        android:id="@+id/profile_zip_code"
                         />

                </com.mangedha.knit.layouts.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_border_height"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/clr_border" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_textsize"
                    android:textStyle="bold" />

                <com.mangedha.knit.layouts.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="@dimen/dim_textfields_top_margin"
                    android:id="@+id/profile_state_layout">

                    <EditText
                        style="@style/attrs_register_field"
                        android:id="@+id/profile_state"
                        />

                </com.mangedha.knit.layouts.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView

            style="@style/attrs_register_btn"
            android:id="@+id/profile_save_button"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="35dp"
            android:text="@string/save" />



    </LinearLayout>



</ScrollView>






</LinearLayout>
