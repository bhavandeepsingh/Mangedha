<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:id="@+id/alert_title"
            android:text="Email Required"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.mangedha.knit.layouts.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            style="@style/attrs_register_field_layout"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="@dimen/dim_textfields_top_margin"
            android:id="@+id/alert_email_layout">

            <EditText
                style="@style/attrs_register_field"
                android:id="@+id/alert_email"
                android:hint="Email" />

        </com.mangedha.knit.layouts.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            style="@style/attrs_alert_btn"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/disable_button_backgroud"
            android:id="@+id/cancel_button"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            style="@style/attrs_alert_btn"
            android:layout_height="wrap_content"
            android:text="Ok"

            android:id="@+id/ok_button"
            android:textSize="14dp"
        />



    </LinearLayout>


</LinearLayout>